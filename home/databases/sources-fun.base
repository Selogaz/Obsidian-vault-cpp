filters:
  and:
    - or:
        - file.hasTag("source/cinematic/movie")
        - file.hasTag("source/cinematic/series")
        - file.hasTag("source/cinematic/anime")
        - file.hasTag("source/music/album")
        - file.hasTag("source/music/tracklist")
        - file.hasTag("source/game")
    - or:
        - this.fun_title == null
        - this.fun_title == ""
        - this.fun_title.length == 0
        - file.name.contains(this.fun_title)
    - or:
        - this.fun_type == null
        - this.fun_type == ""
        - this.fun_type.length == 0
        - file.tags.containsAny(this.fun_type)
    - or:
        - this.fun_status == null
        - this.fun_status == ""
        - this.fun_status.length == 0
        - this.fun_status.contains(status)
    - or:
        - this.fun_rating == null
        - this.fun_rating == ""
        - this.fun_rating.length == 0
        - this.fun_rating.contains(rating)
    - or:
        - this.fun_genre == null
        - this.fun_genre == ""
        - this.fun_genre.length == 0
        - genre.containsAny(this.fun_genre)
    - or:
        - this.fun_creator == null
        - this.fun_creator == ""
        - this.fun_creator.length == 0
        - creator.containsAny(this.fun_creator)
