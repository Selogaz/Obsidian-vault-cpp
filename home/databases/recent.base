filters:
  or:
    - file.inFolder("base")
    - file.inFolder("sources")
    - file.inFolder("projects")
formulas:
  created_relative: created.relative()
  updated_relative: updated.relative()
  folder_type: |
    if(file.inFolder("base"), "ðŸ“ base",
      if(file.inFolder("sources"), "ðŸ“š sources",
        if(file.inFolder("projects"), "ðŸ“‹ projects", "other")))
  today_activity: |
    if(created >= today(), "ðŸ†• created today",
      if(updated >= today(), "ðŸ”„ updated today", "â€”"))
properties:
  file.name:
    displayName: ðŸ”¤ title
  formula.created_relative:
    displayName: ðŸ†• created
  formula.updated_relative:
    displayName: ðŸ”„ updated
  formula.folder_type:
    displayName: ðŸ“‚ folder
  formula.today_activity:
    displayName: ðŸ“… activity
views:
  - type: table
    name: ðŸ”„ Last Updated
    groupBy:
      property: formula.folder_type
      direction: ASC
    order:
      - file.name
      - formula.created_relative
      - formula.updated_relative
    sort:
      - property: formula.updated_relative
        direction: DESC
    limit: 25
    columnSize:
      file.name: 1325
      formula.created_relative: 140
      formula.updated_relative: 140
  - type: table
    name: ðŸ†• Last Created
    groupBy:
      property: formula.folder_type
      direction: ASC
    order:
      - file.name
      - formula.created_relative
      - formula.updated_relative
    sort:
      - property: formula.created_relative
