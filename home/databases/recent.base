    limit: 25
    columnSize:
      file.name: 1325
      formula.created_relative: 140
      formula.updated_relative: 140
  - type: table
    name: ðŸ“… Today activity
    filters:
      or:
        - created >= today()
        - updated >= today()
    groupBy:
      property: formula.today_activity
      direction: ASC
    order:
      - file.name
      - formula.created_relative
      - formula.updated_relative
    sort:
